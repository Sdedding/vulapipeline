// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"features": {
		"ghcr.io/devcontainers/features/desktop-lite:1": {
			"version": "latest",
			"noVncVersion": "1.2.0",
			"password": "noPassword",
			"webPort": "6080",
			"vncPort": "5901"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"version": "os-provided"
		},
		"ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/poetry:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/ruff:1": {
			"version": "latest"
		}
	},
	"forwardPorts": [
		2222,
		6080,
		5901
		// ,		9000
	],
	"portsAttributes": {
		"2222": {
			"label": "ssh"
		},
		"6080": {
			"label": "desktop"
		},
		"5901": {
			"label": "vnc"
		// },
		// "9000": {
		// 	"label": "xxx"
		}
	},
	// Container run arguments (maps the desktop ports so you can see the GUI)
	"runArgs": [
		// "-p", "9000:9000",
		// "-p", "6080:6080"
	],
	// AFTER container creation, run system updates & create your venv
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y gir1.2-gtk-3.0 girepository-2.0 libgirepository1.0-dev libcairo2-dev libffi-dev pkg-config && python3 -m venv venv && bash -c 'source venv/bin/activate && pip install --upgrade pip setuptools wheel && pip install -e . && pip install pydbus PyGObject PyYAML qrcode Pillow pynacl cryptography schema click'",
	"customizations": {
		"vscode": {
			"extensions": [
				"donjayamanne.git-extension-pack",
				"donjayamanne.python-extension-pack",
				"charliermarsh.ruff",
				"GitHub.copilot",
				"TechieCouch.docker-essentials",
				"ms-vscode-remote.vscode-remote-extensionpack"
			]
			,			"settings": {
				"python.defaultInterpreterPath": "/workspaces/vula/.venv"
			}
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}